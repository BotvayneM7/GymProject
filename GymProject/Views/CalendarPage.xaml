<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymProject.Views.CalendarPage"
             Title="CalendarPage">
    
    <VerticalStackLayout Padding="20">
            <Label Text="Your Calendar"
               FontSize="24"
               HorizontalOptions="Center"/>

            <DatePicker/>

            <ListView>
                <ListView.Header>
                    <Label Text="Scheduled Sessions" FontAttributes="Bold"/>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Date}" Detail="{Binding RoutineName}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Text="Add New Session"
                BackgroundColor="#FF5733"
                TextColor="White"
                Padding="10"
                CornerRadius="10"/>
        </VerticalStackLayout>
    </ContentPage>
