<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymProject.Views.ProgressPage"
             Title="ProgressPage">
    
    <VerticalStackLayout Padding="20">
            <Label Text="User Progress"
               FontSize="24"
               HorizontalOptions="Center"/>

            <Label Text="Recent Workout History"
               FontAttributes="Bold"
               Margin="0,10,0,5"/>

            <ListView>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Date}" Detail="{Binding Details}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Text="View Statistics"
                BackgroundColor="#33A1FF"
                TextColor="White"
                Padding="10"
                CornerRadius="10"
                Margin="0,10,0,0"/>
        </VerticalStackLayout>
    </ContentPage>
