<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymProject.Views.WorkoutPlannerPage"
             Title="WorkoutPlannerPage">

    <VerticalStackLayout Padding="20">
        <Label Text="Create a New Workout"
               FontSize="24"
               HorizontalOptions="Center"/>

        <Entry x:Name="WorkoutNameEntry" Placeholder="Workout Name"/>
        <Entry x:Name="ExerciseEntry" Placeholder="Exercise (e.g., Squats)"/>
        <Entry x:Name="RepsSetsEntry" Placeholder="Reps Sets (e.g., 4x12)"/>
        <Entry x:Name="RestTimeEntry" Placeholder="Rest Time (e.g., 3-4 mins)" Keyboard="Numeric"/>

        <Button Text="Add Exercise"
                BackgroundColor="#FF5733"
                TextColor="White"
                Padding="10"
                CornerRadius="10"
                Clicked="OnAddExerciseClicked"/>

        <Label Text="Total Time"
               FontSize="20"
               HorizontalOptions="Center"
               Margin="0,20,0,10"/>

        <!-- List to display added exercises -->
        <ListView x:Name="ExercisesListView" 
                  SeparatorVisibility="Default"
                  Margin="0,10,0,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding ExerciseName}" FontSize="18"/>
                            <Label Text="{Binding RepsSets}" FontSize="16"/>
                            <Label Text="{Binding RestTime, StringFormat='Rest Time: {0} min'}" FontSize="16"/>
                            <Label Text="{Binding TotalTimeAtGym, StringFormat='Total Time: {0} min'}" FontSize="16"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Label for total workout time -->
        <Label x:Name="TotalTimeLabel" Text="Total Time: 0 mins"
               FontSize="18"
               HorizontalOptions="Center"
               Margin="0,10,0,0"/>
    </VerticalStackLayout>
</ContentPage>