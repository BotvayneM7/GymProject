<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymProject.Views.WorkoutSchedulePage"
             Title="Schedule Workout">

    <VerticalStackLayout Padding="20" Spacing="20">
        <!-- Workout Name -->
        <Entry x:Name="WorkoutNameEntry" Placeholder="Workout Name (e.g., Pierna)"/>

        <!-- Calendar (Placeholder, use a proper calendar control) -->
        <Label Text="Select Date" FontSize="18" HorizontalOptions="Center"/>
        <DatePicker x:Name="WorkoutDatePicker" Format="dd/MM/yyyy" HorizontalOptions="Center"/>

        <!-- Time Picker -->
        <Label Text="Select Time" FontSize="18" HorizontalOptions="Center"/>
        <TimePicker x:Name="WorkoutTimePicker" Format="hh:mm tt" HorizontalOptions="Center"/>

        <!-- Continue Button -->
        <Button Text="Continue"
                BackgroundColor="#33A1FF"
                TextColor="White"
                Padding="10"
                CornerRadius="10"
                Clicked="OnContinueClicked"/>
    </VerticalStackLayout>
</ContentPage>